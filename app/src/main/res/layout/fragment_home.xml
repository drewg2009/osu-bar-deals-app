<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="mobileapps.osubardeals.osubardealsapp.Fragments.HomeFragment">


    <TextView
        android:id="@+id/home_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Home"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <android.support.v7.widget.CardView
        android:id="@+id/deals_card"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="16dp"
        app:contentPadding="16dp" >

        <TextView
            android:id="@+id/deals_cardTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Deals"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/bars_card"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:visibility="visible"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="16dp"
        app:contentPadding="16dp" >

        <TextView
            android:id="@+id/bars_cardTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Bars"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />
    </android.support.v7.widget.CardView>

   <!--
    <android.support.v7.widget.CardView
        android:id="@+id/barCrawl_card"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="16dp"
        app:contentPadding="16dp" >

        <TextView
            android:id="@+id/barCrawl_cardTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Bar Crawl"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />
    </android.support.v7.widget.CardView>
-->

    <android.support.v7.widget.CardView
        android:id="@+id/favorites_card"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="16dp"
        app:contentPadding="16dp" >

        <TextView
            android:id="@+id/favorites_cardTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Favorites"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/logoutButton"
        android:textSize="20sp"
        android:text="Logout"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
/>
</LinearLayout>
